# Akasha Development Environment Configuration

# System Configuration
AKASHA_SYSTEM__NAME=akasha
AKASHA_SYSTEM__VERSION=0.1.0
AKASHA_SYSTEM__ENVIRONMENT=development
AKASHA_SYSTEM__DEBUG=true
AKASHA_SYSTEM__MAX_MEMORY_GB=40

# API Configuration
AKASHA_API__HOST=127.0.0.1
AKASHA_API__PORT=8000
AKASHA_API__WORKERS=1
AKASHA_API__RELOAD=true

# LLM Configuration (M4 Pro Optimized)
AKASHA_LLM__BACKEND=mlx
AKASHA_LLM__MODEL_NAME=gemma-3-27b
AKASHA_LLM__MODEL_PATH=./models
AKASHA_LLM__QUANTIZATION_BITS=4
AKASHA_LLM__MEMORY_LIMIT_GB=16

# Embedding Configuration  
AKASHA_EMBEDDING__MODEL=jina-v4
AKASHA_EMBEDDING__BATCH_SIZE=16
AKASHA_EMBEDDING__MEMORY_LIMIT_GB=4

# Vector Store Configuration
AKASHA_VECTOR_STORE__BACKEND=chroma
AKASHA_VECTOR_STORE__COLLECTION_NAME=documents
AKASHA_VECTOR_STORE__MEMORY_LIMIT_GB=8

# Cache Configuration
AKASHA_CACHE__MEMORY_LIMIT_GB=6
AKASHA_CACHE__ENABLE_DISK_CACHE=true

# Logging Configuration
AKASHA_LOGGING__LEVEL=DEBUG
AKASHA_LOGGING__FORMAT=structured
AKASHA_LOGGING__OUTPUT=console

# Security Configuration
AKASHA_SECURITY__JWT_SECRET_KEY=dev-secret-key-change-in-production-12345678901234567890
AKASHA_SECURITY__JWT_EXPIRE_MINUTES=60

# Plugin Configuration
AKASHA_PLUGINS__ENABLE_HOT_RELOAD=true
AKASHA_PLUGINS__SANDBOX_ENABLED=true

# Monitoring Configuration
AKASHA_MONITORING__ENABLE_METRICS=true
AKASHA_MONITORING__METRICS_PORT=9090

# Configuration file path
AKASHA_CONFIG=./config/akasha.yaml