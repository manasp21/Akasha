# Akasha Production Environment Variables Template
# Copy this file to .env.production and set secure values

# ======================================
# CRITICAL SECURITY SETTINGS
# ======================================

# JWT Secret Key (REQUIRED - Generate a secure 64+ character key)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-in-production-please-make-it-very-long-and-random

# Admin User Credentials (Change these!)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password

# ======================================
# API Configuration
# ======================================

# API Host and Port
AKASHA_API__HOST=0.0.0.0
AKASHA_API__PORT=8000

# CORS Origins (Add your domain)
AKASHA_API__CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# ======================================
# Database Configuration
# ======================================

# Redis Configuration
REDIS_HOST=akasha-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://akasha-redis:6379/0

# ChromaDB Configuration
CHROMA_SERVER_HOST=akasha-chromadb
CHROMA_SERVER_PORT=8001
CHROMA_SERVER_URL=http://akasha-chromadb:8001

# ======================================
# Authentication & Security
# ======================================

# Token Expiration
AKASHA_AUTH__ACCESS_TOKEN_EXPIRE_MINUTES=15
AKASHA_AUTH__REFRESH_TOKEN_EXPIRE_DAYS=30

# Rate Limiting
AKASHA_AUTH__ENABLE_RATE_LIMITING=true
AKASHA_AUTH__LOGIN_ATTEMPTS_PER_MINUTE=5
AKASHA_AUTH__API_REQUESTS_PER_MINUTE=100

# Security Features
AKASHA_AUTH__ENABLE_SECURITY_HEADERS=true
AKASHA_SECURITY__ENABLE_HTTPS_ONLY=false

# ======================================
# LLM Configuration
# ======================================

# Model Settings
AKASHA_LLM__BACKEND=mlx
AKASHA_LLM__MODEL_NAME=gemma-3-27b
AKASHA_LLM__QUANTIZATION_BITS=4
AKASHA_LLM__MEMORY_LIMIT_GB=16

# Generation Parameters
AKASHA_LLM__MAX_TOKENS=2048
AKASHA_LLM__TEMPERATURE=0.7

# ======================================
# System Resources
# ======================================

# Memory Limits (Adjust for your system)
AKASHA_SYSTEM__MAX_MEMORY_GB=40
AKASHA_VECTOR_STORE__MEMORY_LIMIT_GB=8
AKASHA_EMBEDDING__MEMORY_LIMIT_GB=4
AKASHA_CACHE__MEMORY_LIMIT_GB=6

# ======================================
# Monitoring & Logging
# ======================================

# Logging Level
AKASHA_LOGGING__LEVEL=INFO
AKASHA_LOGGING__OUTPUT=both

# Metrics
AKASHA_MONITORING__ENABLE_METRICS=true
AKASHA_MONITORING__METRICS_PORT=9090

# ======================================
# Optional Features
# ======================================

# Model Preloading
AKASHA_PRELOAD_MODELS=false

# Development Features (Keep false in production)
AKASHA_SYSTEM__DEBUG=false
AKASHA_API__RELOAD=false
AKASHA_PLUGINS__ENABLE_HOT_RELOAD=false

# ======================================
# SSL/TLS Configuration (if using HTTPS)
# ======================================

# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ======================================
# Backup Configuration
# ======================================

# S3_BUCKET_NAME=your-backup-bucket
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_REGION=us-west-2

# ======================================
# External Services (if applicable)
# ======================================

# ELASTICSEARCH_URL=http://elasticsearch:9200
# GRAFANA_URL=http://grafana:3000
# PROMETHEUS_URL=http://prometheus:9090

# ======================================
# Docker Configuration
# ======================================

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=akasha-prod

# Docker Registry (if using private registry)
# DOCKER_REGISTRY=your-registry.com